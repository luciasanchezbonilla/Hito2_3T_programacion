<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.empresa.hito2_3t_programacion_lucia_sanchez_bonilla.LoginController">
    <padding>
        <Insets top="50" right="50" bottom="50" left="50" />
    </padding>

    <Label text="Inicio de sesión" />
    <TextField fx:id="usernameField" promptText="Nombre de usuario"/>
    <PasswordField fx:id="passwordField" promptText="Contraseña"/>
    <Button onAction="#login" text="Iniciar sesión" />
    <Label fx:id="errorMessage" />
</VBox>
